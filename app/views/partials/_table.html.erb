<table id="<%= type %>" class="datatable">
  <thead>
    <tr>
      <td>#</td>
      <% show.each do |c| %>
        <td><%= c.sub('_',' ').capitalize %></td>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% collection.each.with_index do |collection, index| %>
      <tr>
        <td><%= index %></td>
        <% show.each do |method| %>
          <td><%= link_to collection.send(method), "/dash/#{type}/#{collection.id}" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>